<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :recipients %>
      <%= f.select(:recipients, User.where(id: @matching_user.id).collect  {|p| [ p.id ] }, {}, { multiple: true , class: "form-control", :required => 'required' })%>
      <!--%= f.select(:recipients, User.with_profile.collect  {|p| [ p.id ] }, {}, { multiple: true , class: "form-control" })%-->

    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4, :required => 'required'  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-success" %>

<% end %>