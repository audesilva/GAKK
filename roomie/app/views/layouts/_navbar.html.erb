<nav class="navbar navbar-default">
  <div class="container-fluid">
        <a class="navbar-brand" href="#">ROOMIE</a>
        <!-- Brand and toggle get grouped for better mobile display -->
	<% if user_signed_in? %>
		<% if defined? current_user.preferences != nil && defined? current_user.profile != nil %>
			<%= link_to "Matches", user_matches_path(current_user), :class => 'btn btn-default navbar-btn pull-left' %>
		<% end %>
		<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-default navbar-btn pull-right'  %>
	    <%= link_to 'Edit Account', edit_user_registration_path, :class => 'btn btn-default navbar-btn pull-right' %> 
	    <% if current_user.profile.nil? %>
	    	<%= link_to "Create User Profile", new_profile_path,  :class => 'btn btn-default navbar-btn pull-right'  %>
	    <% else %>
	    	<%= link_to "Edit User Profile", edit_profile_path(current_user.user_id),  :class => 'btn btn-default navbar-btn pull-right'  %>
	    <% end %>
	    <% if current_user.preferences.nil? %>
	    	<%= link_to "Create User Preferences", new_preferences_path,  :class => 'btn btn-default navbar-btn pull-right'  %>
	    <% else %>
	    	<%= link_to "Edit User Preferences", edit_preferences_path(current_user.user_id),  :class => 'btn btn-default navbar-btn pull-right'  %>
	    <% end %>
	    <p class="navbar-text pull-right">  Logged in as <strong><%= current_user.email %></strong>. </p>
	<%else %>
	    <%= link_to "Login", new_user_session_path, :class=> 'btn btn-default navbar-btn pull-right'%>
	    <p class="navbar-text pull-right">Already a partner? </p>
	<% end %>
  </div>
  <!-- /.container-fluid -->
